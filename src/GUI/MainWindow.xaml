<Window x:Class="YouTubeAudioDownloader.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YouTubeAudioDownloader.GUI"
        mc:Ignorable="d"
        Title="YouTube Audio Downloader - Cosmic Edition" 
        Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        Background="#0a0e27"
        Icon="Assets/nebula-icon.ico">
    
    <Window.Resources>
        <!-- Cosmic Glow Effect -->
        <DropShadowEffect x:Key="CosmicGlow" 
                         Color="#8b5a8b" 
                         BlurRadius="30" 
                         ShadowDepth="0" 
                         Opacity="0.8"/>
        
        <DropShadowEffect x:Key="OrangeGlow" 
                         Color="#ff6b35" 
                         BlurRadius="20" 
                         ShadowDepth="0" 
                         Opacity="0.9"/>
        
        <DropShadowEffect x:Key="CyanGlow" 
                         Color="#00d4ff" 
                         BlurRadius="15" 
                         ShadowDepth="0" 
                         Opacity="0.7"/>

        <!-- Nebula Gradient Brushes -->
        <LinearGradientBrush x:Key="NebulaGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#162447" Offset="0"/>
            <GradientStop Color="#1f4068" Offset="0.3"/>
            <GradientStop Color="#6b2d5c" Offset="0.7"/>
            <GradientStop Color="#8b5a8b" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="CosmicAccent" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#ff6b35" Offset="0"/>
            <GradientStop Color="#f7b731" Offset="1"/>
        </LinearGradientBrush>

        <!-- Cosmic Button Style -->
        <Style x:Key="CosmicButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource NebulaGradient}"/>
            <Setter Property="Foreground" Value="#e0e1dd"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="30,15"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#8b5a8b"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect" Value="{StaticResource CosmicGlow}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                Effect="{TemplateBinding Effect}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Effect" Value="{StaticResource OrangeGlow}"/>
                                <Setter Property="BorderBrush" Value="#ff6b35"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Cosmic TextBox Style -->
        <Style x:Key="CosmicTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#1a1a2e"/>
            <Setter Property="Foreground" Value="#e0e1dd"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#6b2d5c"/>
            <Setter Property="CaretBrush" Value="#00d4ff"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="5,0"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#8b5a8b"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#00d4ff"/>
                                <Setter TargetName="border" Property="Effect" Value="{StaticResource CyanGlow}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Cosmic RadioButton Style -->
        <Style x:Key="CosmicRadioStyle" TargetType="RadioButton">
            <Setter Property="Foreground" Value="#e0e1dd"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,20,0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Nebula Background -->
        <Grid.Background>
            <ImageBrush ImageSource="Assets/nebula-background.jpg" 
                       Opacity="0.3" 
                       Stretch="UniformToFill"/>
        </Grid.Background>

        <!-- Dark Overlay for better contrast -->
        <Rectangle Fill="#0a0e27" Opacity="0.7"/>
        
        <!-- Particle Effects Canvas -->
        <Canvas x:Name="ParticleCanvas" IsHitTestVisible="False"/>

        <!-- Main Content Container -->
        <Border Background="#1a1a2e" 
                Opacity="0.85"
                CornerRadius="20"
                Margin="50"
                Padding="40"
                BorderThickness="2"
                BorderBrush="#6b2d5c"
                Effect="{StaticResource CosmicGlow}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock Grid.Row="0" 
                          Text="🌌 YouTube Audio Downloader"
                          FontSize="32"
                          FontWeight="Bold"
                          HorizontalAlignment="Center"
                          Effect="{StaticResource OrangeGlow}">
                    <TextBlock.Foreground>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#00d4ff" Offset="0"/>
                            <GradientStop Color="#8b5a8b" Offset="0.5"/>
                            <GradientStop Color="#ff6b35" Offset="1"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBlock>

                <!-- Subtitle -->
                <TextBlock Grid.Row="2" 
                          Text="Extract audio from YouTube videos in cosmic quality"
                          FontSize="14"
                          Foreground="#a0a0a0"
                          HorizontalAlignment="Center"
                          FontStyle="Italic"/>

                <!-- URL Input Section -->
                <StackPanel Grid.Row="4">
                    <TextBlock Text="YouTube URL" 
                              Foreground="#00d4ff" 
                              FontSize="14" 
                              FontWeight="SemiBold"
                              Margin="0,0,0,8"/>
                    <TextBox x:Name="UrlTextBox"
                            Style="{StaticResource CosmicTextBoxStyle}"
                            TextChanged="UrlTextBox_TextChanged"/>
                </StackPanel>

                <!-- Download Folder Selection -->
                <StackPanel Grid.Row="6">
                    <TextBlock Text="Download Folder" 
                              Foreground="#f7b731" 
                              FontSize="14" 
                              FontWeight="SemiBold"
                              Margin="0,0,0,8">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#f7b731" BlurRadius="10" ShadowDepth="0" Opacity="0.5"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox x:Name="FolderPathTextBox"
                                Grid.Column="0"
                                Style="{StaticResource CosmicTextBoxStyle}"
                                IsReadOnly="True"
                                Background="#0f1419"
                                Text="{Binding DownloadFolder, Mode=OneWay}"/>
                        
                        <Button x:Name="BrowseFolderButton"
                               Grid.Column="2"
                               Content="Browse..."
                               Style="{StaticResource CosmicButtonStyle}"
                               Padding="20,12"
                               FontSize="14"
                               Click="BrowseFolderButton_Click"/>
                    </Grid>
                </StackPanel>

                <!-- Format Selection -->
                <StackPanel Grid.Row="8">
                    <TextBlock Text="Audio Format" 
                              Foreground="#00d4ff" 
                              FontSize="14" 
                              FontWeight="SemiBold"
                              Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <RadioButton x:Name="Mp3Radio" 
                                    Content="🎵 MP3 (320kbps)" 
                                    IsChecked="True"
                                    Style="{StaticResource CosmicRadioStyle}"/>
                        <RadioButton x:Name="FlacRadio" 
                                    Content="💎 FLAC (Lossless)" 
                                    Style="{StaticResource CosmicRadioStyle}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Download Button -->
                <Button Grid.Row="10"
                       x:Name="DownloadButton"
                       Content="✨ Download Audio ✨"
                       Style="{StaticResource CosmicButtonStyle}"
                       Click="DownloadButton_Click"
                       HorizontalAlignment="Center"/>

                <!-- Playlist Progress (initially hidden) -->
                <TextBlock Grid.Row="12"
                          x:Name="PlaylistProgressText"
                          Visibility="Collapsed"
                          FontSize="14"
                          FontWeight="SemiBold"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,0">
                    <TextBlock.Foreground>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#00d4ff" Offset="0"/>
                            <GradientStop Color="#ff6b35" Offset="1"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#00d4ff" BlurRadius="12" ShadowDepth="0" Opacity="0.6"/>
                    </TextBlock.Effect>
                </TextBlock>

                <!-- Progress Bar -->
                <StackPanel Grid.Row="14" Visibility="Collapsed" x:Name="ProgressPanel">
                    <ProgressBar x:Name="DownloadProgressBar"
                                Height="20"
                                Minimum="0"
                                Maximum="100"
                                Value="0"
                                Foreground="{StaticResource CosmicAccent}"
                                Background="#1a1a2e"
                                BorderBrush="#6b2d5c"
                                BorderThickness="1"/>
                    <TextBlock x:Name="StatusText"
                              Text="Ready to download..."
                              Foreground="#a0a0a0"
                              FontSize="12"
                              HorizontalAlignment="Center"
                              Margin="0,8,0,0"/>
                </StackPanel>

                <!-- Bottom Actions -->
                <StackPanel Grid.Row="15" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Center"
                           VerticalAlignment="Bottom">
                    <Button x:Name="OpenFolderButton"
                           Content="📁 Open Downloads Folder"
                           Style="{StaticResource CosmicButtonStyle}"
                           Click="OpenFolderButton_Click"
                           Padding="20,10"
                           FontSize="14"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
